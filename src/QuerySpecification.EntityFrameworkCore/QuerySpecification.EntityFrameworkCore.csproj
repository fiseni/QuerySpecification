<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>Pozitron.QuerySpecification</RootNamespace>
    <PackageId>Pozitron.QuerySpecification.EntityFrameworkCore</PackageId>
    <Authors>Fati Iseni</Authors>
    <Company>Pozitron Group LLC</Company>
    <Product>Pozitron Query Specification (EntityFramework Core latest plugin)</Product>
    <Title>Pozitron.QuerySpecification.EntityFrameworkCore</Title>
    <Description>EntityFramework Core (latest) plugin to Pozitron.QuerySpecification containing the EF evaluator and abstract repository.</Description>
    <Summary>EntityFramework Core (latest) plugin to Pozitron.QuerySpecification containing the EF evaluator and abstract repository.</Summary>
    <Copyright>Copyright Â© 2021 Pozitron Group LLC</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>Check release notes on github.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/fiseni/QuerySpecification</PackageProjectUrl>
    <PackageIconUrl>https://pozitrongroup.com/PozitronLogo.png</PackageIconUrl>
    <PackageIcon>pozitronicon.png</PackageIcon>
    <PackageTags>pozitron specification efcore repository cleanarchitecture</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>5.0.4</Version>
    <!--<DocumentationFile>bin\$(Configuration)\Pozitron.QuerySpecification.EntityFrameworkCore.xml</DocumentationFile>-->
    <RepositoryUrl>https://github.com/fiseni/QuerySpecification</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../docs/pozitronicon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.8" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="8.0.8" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\QuerySpecification\QuerySpecification.csproj" />
  </ItemGroup>
</Project>

