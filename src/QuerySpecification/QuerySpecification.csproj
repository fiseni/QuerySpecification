<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>Pozitron.QuerySpecification</RootNamespace>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <PackageId>Pozitron.QuerySpecification</PackageId>
    <Title>Pozitron.QuerySpecification</Title>
    <Authors>Fati Iseni</Authors>
    <Company>Pozitron Group</Company>
    <Product>Pozitron QuerySpecification</Product>
    <Description>Abstract package for building query specifications in your domain model.</Description>
    <Summary>Abstract package for building query specifications in your domain model.</Summary>
    <Copyright>Copyright Â© 2024 Pozitron Group</Copyright>
    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>10.0.0-beta1</Version>
    <PackageTags>pozitron query specification</PackageTags>
    <PackageReleaseNotes>Check release notes on github.</PackageReleaseNotes>
    
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/fiseni/QuerySpecification</PackageProjectUrl>
    <PackageIconUrl>https://pozitrongroup.com/PozitronLogo.png</PackageIconUrl>
    <PackageIcon>pozitronicon.png</PackageIcon>
    <RepositoryUrl>https://github.com/fiseni/QuerySpecification</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <!--<DocumentationFile>bin\$(Configuration)\Pozitron.QuerySpecification.xml</DocumentationFile>-->
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../docs/pozitronicon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  
</Project>
